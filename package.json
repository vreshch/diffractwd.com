        "less-loader": "4.1.0",
        "nodemon": "1.18.4",
        "postcss-loader": "3.0.0",
        "style-loader": "0.23.0",
        "ts-node": "7.0.1",
        "tslint": "5.11.0",
        "tslint-react": "3.6.0",
        "typescript": "3.0.3",
        "url-loader": "1.1.1",
        "webpack": "4.18.0",
        "webpack-cli": "3.1.0",
        "webpack-serve": "2.0.2"
    }
